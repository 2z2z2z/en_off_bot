{
  "name": "en-offline-bot",
  "version": "1.0.0",
  "description": "Telegram-бот для отправки ответов в игру Encounter с поддержкой offline режима",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --check \"src/infra/**/*.js\" \"src/features/answer/burst-detector.js\" \"src/utils/parse-game-url.js\" \"__tests__/**/*.js\" \"docs/target-structure.md\"",
    "format:all": "prettier --write \"**/*.{js,json,md}\"",
    "migrate:sqlite": "node scripts/migrate-json-to-sqlite.js",
    "export:json": "node scripts/export-sqlite-to-json.js",
    "archive:json": "node scripts/archive-user-json.js",
    "test:perf": "node scripts/perf-user-repository.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "encounter",
    "offline"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "node-telegram-bot-api": "^0.65.1",
    "pino": "^10.1.0",
    "sql.js": "^1.13.0",
    "vk-io": "^4.10.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2"
  }
}
